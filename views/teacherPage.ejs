<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include('cdn') %>
</head>

<body>
    <div>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/users/landingPage/teacher">EdukaYuk</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
                    aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page"
                                href="/users/teacher/course/maintenance">Course</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/users/logout">Logout</a>
                        </li>
                    </ul>
                </div>

                <form class="d-flex" method="get">
                    <input class="form-control me-2" type="search" placeholder="Search" name="search">
                    <button class="btn btn-outline-success" type="search">Search</button>
                </form>
            </div>
        </nav>
    </div>

    <div class="px-4 py-5 my-5 text-center">
        <h1 class="display-5 fw-bold" style="font-family: Arial, Helvetica, sans-serif;">Welcome back to EdukaYuk,
            <% data.forEach(el => { %>
            <%= el.firstName %>
            <% }) %> ðŸ—¿</h1>
    </div>
    
    <div class="container mt-5">
      <table class="table">
        <p>Jumlah seluruh Student adalah <%= totalStudent[0].dataValues.total %></p>
          <thead>
              <tr>
                  <th scope="col">No.</th>
                  <th scope="col">Picture Profile</th>
                  <th scope="col">Name</th>
                  <th scope="col">Gender</th>
                  <th scope="col">Email</th>
              </tr>
          </thead>
          <tbody>
              <% dataStudent.forEach((el, index) => { %>
                  <tr>
                      <th scope="row"><%= index + 1 %></th>
                      <td><img src="<%= el.profilePicture %>" alt="Profile Picture" class="img-fluid" style="max-width: 50px;"></td>
                      <td><%= el.fullName %></td>
                      <td><%= el.gender %></td>
                      <td><%= el.email %></td>
                  </tr>
              <% }) %>
          </tbody>
      </table>
  </div>
</body>

</html>
