<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include('cdn') %>
</head>
<body>
    <section class="vh-100" style="background-color: #3c2b2f;">
        <div class="container py-5 h-100">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-5">
              <div class="card" style="border-radius: 1rem;">
                <div class="row g-0">
        
                  <div class="d-flex align-items-center">
                    <div class="card-body p-2 p-lg-5 text-black">
      
                      <form action="/users/add/schedule" method="post">
      
                        <div class="d-flex align-items-center mb-3 pb-1">
                          <span class="h1 fw-bold mb-0">Add Schedule</span>
                        </div>

                        <div class="form-outline">
                        <label class="form-label" for="course">Course</label>
                        <select class="form-select" name="CourseId">
                            <option selected disabled>-- Select Course</option>
                            <% course.forEach(el => { %>
                                <option value="<%= el.id %>"><%= el.course %></option>
                            <% }) %>
                          </select>
                          </div>

                        <div class="form-outline">
                          <label class="form-label" for="scedule">Schedule</label>
                          <input type="text" id="schedule" class="form-control form-control-lg" name="scedule" placeholder="ex : Kamis : 09.00-10.00"/>
                        </div>
      
                        <div class="pt-1 mb-4">
                          <button class="btn btn-dark btn-lg btn-block" type="submit">Register</button>
                        </div>
                      </form>
      
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
</body>
</html>